@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style type="text/css">
    .center {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 10px;
    }
    .glass{
        background: rgba(6, 21, 93, 0.04);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(0px);
        -webkit-backdrop-filter: blur(0px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding:0px 15px 0px 15px;
    }
    .text-primary{
        color:#0659b2 !important
    }
</style>
<div class="col-sm-10 col-md-4 col-lg-4 center glass">
    <div class="row">
    <div class="col-12">
        <section>
            <form id="account" method="post">
                <h4 class="text-white">Welcome</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.UserLogin" class="form-control" placeholder="Username" style="border-radius:10px;margin-top:15px" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.UserLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" style="border-radius:10px;margin-top:15px" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="text-center" style="display:flex;justify-content:center">
                    <button id="login-submit" type="submit" class="btn btn-primary" style="border-radius:10px;background:#0659b2;color:#fff;width:40%;margin-bottom:15px">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
