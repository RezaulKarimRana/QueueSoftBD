    <script type="text/javascript">
        $(document).ready(function() {
            var wi = $(window).width();
            if (wi < 980) {
                $('#jmenu .show-menu').click(function() {
                    $(".mzr-responsive").slideToggle(400, "linear");
                    $('.drop-one-columns').slideUp();
                });
                $('.submenu').on('click', function(e) {
                    e.preventDefault();
                    let parent = $(this).parent('.mzr-drop');
                    parent.siblings('.mzr-drop').find('.drop-one-columns').slideUp();
                    $(this).next('.drop-one-columns ').slideToggle();
                    console.log(parent.siblings().find('.drop-one-columns'))
                })
            }
        });
        $(window).on('load', () => {
            if ($(window).width() >= 980) {
                $('.mzr-drop').each((idx, item) => {
                    let submenu = $(item).find('.submenu');
                    let rgb = $(submenu).css('color');
                    let dropdown = submenu.next('.drop-one-columns');
                    dropdown.attr('style', `border-top: 5px solid ${rgb}`)
                })
            }
        })
        $(function() {
            function initNewsTicker(id, options) {

                var $scroller = $(id);
                $scroller.vTicker('init', options);

                $("#bdes-ticker .next").click(function(event) {
                    event.preventDefault();
                    var checked = true;
                    $('#bdes-ticker').vTicker('next', { animate: checked });
                });
                $("#bdes-ticker .prev,#bdes-ticker .next").hover(function() {
                    $('#bdes-ticker').vTicker('next', { animate: checked });
                    $scroller.vTicker('pause', true);
                }, function() {
                    $('#bdes-ticker').vTicker('next', { animate: checked });
                    $scroller.vTicker('pause', false);
                });
                $("#bdes-ticker .prev").click(function(event) {
                    event.preventDefault();
                    var checked = true;
                    $('#bdes-ticker').vTicker('prev', { animate: checked });
                });
            }

            function initNoticeBoardTicker(id, options) {

                var $scroller = $(id);
                $scroller.vTicker('init', options);

                $("#notice-board-ticker .next").click(function(event) {
                    event.preventDefault();
                    var checked = true;
                    $('#notice-board-ticker').vTicker('next', { animate: false });
                });
                $("#notice-board-ticker .prev,#notice-board-ticker .next").hover(function() {
                    $scroller.vTicker('pause', true);
                }, function() {
                    $scroller.vTicker('pause', false);
                });
                $("#notice-board-ticker .prev").click(function(event) {
                    event.preventDefault();
                    var checked = true;
                    $('#notice-board-ticker').vTicker('prev', { animate: checked });
                });
            }
            initNewsTicker('#bdes-ticker', {});
        });

        window.addEventListener('scroll', function() {
            let navbar = document.getElementById("nav_mn");

            if (window.pageYOffset >= 223) {
                navbar.classList.add('sticky');
            } else {
                navbar.classList.remove('sticky');
            }
        });
    </script>
